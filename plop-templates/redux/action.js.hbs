import { makeRequestAction } from './index';

/**
 * Fetch {{name}}
 */
export const {{> fetchAllActionName }} = makeRequestAction('FETCH_{{constantCase name}}', {
  onSuccess(params, response) {
    return {
      response: {
        ...response,
      },
    };
  },
});

